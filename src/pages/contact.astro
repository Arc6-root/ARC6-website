---
import Layout from '../layouts/Layout.astro';

const seoTitle = 'Contact - ARC6 Angers | Demande de Devis Économiste Construction';
const seoDescription = 'Contactez ARC6, économiste de la construction à Angers. Architectes, MOE, maîtres d\'ouvrage : demandez un devis gratuit pour votre projet BTP. Réponse rapide garantie.';
---

<Layout title={seoTitle} description={seoDescription}>
	<main class="max-w-4xl mx-auto py-12 px-4">
		
		<!-- H1 enrichi -->
		<h1 class="text-4xl font-bold text-center mb-4">Contactez ARC6</h1>
		<p class="text-center text-lg mb-8 max-w-2xl mx-auto">
			Architecte, bureau d'études ou maître d'ouvrage ? Parlons de votre projet de construction. <strong>Réponse rapide</strong> garantie.
		</p>
		
		<!-- Ajout section coordonnées avant formulaire -->
		<div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
			<div class="bg-white p-6 rounded-lg shadow-md">
				<h2 class="text-2xl font-bold mb-4">Nos Coordonnées</h2>
				<address class="not-italic space-y-3">
					<p>
						<strong>ARC6 Ingénierie</strong><br>
						12 boulevard Daviers<br>
						49100 Angers<br>
						Maine-et-Loire, France
					</p>
					<p>
						<strong>Email :</strong><br>
						<a href="mailto:contact@arc6.fr" class="text-arc6-dark-gray hover:text-arc6-blue font-semibold">
							contact@arc6.fr
						</a>
					</p>
				</address>
			</div>
			
			<div class="bg-white p-6 rounded-lg shadow-md">
				<h2 class="text-2xl font-bold mb-4">Délai de Réponse</h2>
				<p class="mb-3">
					Nous nous engageons à vous répondre sous <strong>48h ouvrées</strong> maximum.
				</p>
				<p>
					Pour les demandes urgentes (appels d'offre, délais courts), précisez-le dans votre message pour une prise en charge prioritaire.
				</p>
			</div>
		</div>
		
		<!-- Formulaire -->
		<div id="form-wrapper" class="max-w-lg mx-auto">
			<h2 class="text-2xl font-bold text-center mb-6">Formulaire de Contact</h2>
			<p class="text-lg text-center mb-8">
				Décrivez-nous votre projet et vos besoins en quelques lignes.
			</p>
			
			<form id="contact-form" method="POST" class="bg-white p-8 rounded-lg shadow-md">
				<div class="mb-4">
					<label for="name" class="block text-sm font-bold mb-2">Nom / Structure :</label>
					<input type="text" id="name" name="name" required class="shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" placeholder="Votre nom ou votre cabinet" />
				</div>
				<div class="mb-4">
					<label for="email" class="block text-sm font-bold mb-2">Email :</label>
					<input type="email" id="email" name="email" required class="shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" placeholder="votre@email.fr" />
				</div>
				<div class="mb-6">
					<label for="message" class="block text-sm font-bold mb-2">Message :</label>
					<textarea id="message" name="message" rows="5" required class="shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" placeholder="Décrivez votre projet : type (bâtiment, TP, VRD), localisation, budget prévisionnel, délais..."></textarea>
				</div>
				<div class="flex items-center justify-center">
					<button type="submit" class="bg-arc6-dark-gray hover:bg-gray-600 text-arc6-blue font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
						Envoyer
					</button>
				</div>
			</form>
		</div>

		<!-- Message de succès (caché par défaut) -->
		<div id="success-message" class="hidden text-center bg-white p-8 rounded-lg shadow-md max-w-lg mx-auto">
			<h2 class="text-2xl font-bold mb-4">Merci !</h2>
			<p>Votre message a bien été envoyé. Nous vous répondrons dans les plus brefs délais.</p>
		</div>

		<!-- Message d'erreur (caché par défaut) -->
		<div id="error-message" class="hidden text-center bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative max-w-lg mx-auto" role="alert">
			<strong class="font-bold">Oups !</strong>
			<span class="block sm:inline">Une erreur s'est produite. Veuillez réessayer.</span>
		</div>

	</main>

	<script>
		const form = document.getElementById('contact-form') as HTMLFormElement;
		const formWrapper = document.getElementById('form-wrapper');
		const successMessage = document.getElementById('success-message');
		const errorMessage = document.getElementById('error-message');
		const webhookUrl = 'https://n8n.gambader.fr/webhook/9f3b37d3-dbf0-4f4c-ad9e-cfbffde9e17b';

		form.addEventListener('submit', async (event) => {
			event.preventDefault();

			const formData = new FormData(form);
			const data = Object.fromEntries(formData.entries());

			try {
				const response = await fetch(webhookUrl, {
					method: 'POST',
					body: JSON.stringify(data),
					headers: {
						'Content-Type': 'application/json',
					},
				});

				if (response.ok) {
					// Affiche le message de succès
					if (formWrapper && successMessage) {
						formWrapper.style.display = 'none';
						successMessage.style.display = 'block';
					}
				} else {
					// Affiche le message d'erreur
					if (errorMessage) {
						errorMessage.style.display = 'block';
					}
				}
			} catch (error) {
				// Affiche le message d'erreur
				if (errorMessage) {
					errorMessage.style.display = 'block';
				}
			}
		});
	</script>
</Layout>
